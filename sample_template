global
  log 127.0.0.1 local0
  log-tag haproxy
  daemon
  quiet
  stats socket /var/run/haproxy.sock
  stats timeout 2m
  maxconn 1024
defaults
  timeout connect 5000ms
  timeout client 10000ms
  timeout server 10000ms
  log global
  mode tcp
  balance roundrobin
  option dontlognull
  option redispatch

frontend http-in
  bind 0.0.0.0:80
  {{range $name, $s := $.Services}}{{range $k, $annotation := $s.Annotations}}use_backend {{$name}}_{{$k}} if {{$annotation}}{{end}}{{end}}

{{range $name, $s := $.Services}}{{range $portname, $p := $s.Ports}}frontend {{$name}}_{{$portname}}
  default_backend {{$name}}_{{$portname}}
  bind *:{{$p.TargetPort}}
  maxconn 2000
backend {{$name}}_{{$portname}}
  {{range $nodename, $n := $.Nodes}}server {{$nodename}} {{$n.Address}}:{{$p.NodePort}}
  {{end}}
{{end}}{{end}}
